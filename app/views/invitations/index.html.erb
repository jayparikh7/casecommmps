<div class="page-header">
  <h1>
    Invitations
    <a href="/invitations/new" class="btn btn-lg btn-success">New Invitation</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Creator</th>
        <th>Member</th>
        <th>Accepted</th>
        <th>Team</th>
        <th>Actions</th>
      </tr>

      <% @invitations.each do |invitation| %>
      <tr>
        <td><%= invitation.creator.username %></td>
        <td><%= invitation.member.username %></td>
        <td><%= invitation.accepted %></td>
        <td><%= invitation.team.name %></td>
        <td>
          <a href="/invitations/<%= invitation.id %>" class="btn btn-primary">Show</a>
          <% if invitation.creator.username == current_user.username  %>
          <a href="/invitations/<%= invitation.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_invitation/<%= invitation.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
