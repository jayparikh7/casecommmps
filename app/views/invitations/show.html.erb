<div class="page-header">
  <h3>Invitation #<%= @invitation.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Creator</dt>
      <dd><%= @invitation.creator.username %></dd>

      <dt>Member</dt>
      <dd><%= @invitation.member.username %></dd>

      <dt>Accepted</dt>
      <dd><%= @invitation.accepted %></dd>

      <dt>Team</dt>
      <dd><%= @invitation.team.name %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/invitations" class="btn btn-primary">
        Back
      </a>
      <% if @invitation.creator.username == current_user.username  %>
      <a href="/invitations/<%= @invitation.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_invitation/<%= @invitation.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
      <% end  %>
    </div>
  </div>
</div>
