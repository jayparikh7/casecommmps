<!-- Validation failure messages -->
<% if @result.errors.any? %>
  <% @result.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Result #<%= @result.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_result/<%= @result.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for competition_id -->
      <div class="form-group">
        <label for="competition_id" class="control-label">
          Competition
        </label>

        <input type="text" id="competition_id" name="competition_id" placeholder="Competition" class="form-control" value="<%= @result.competition_id %>">
      </div>

      <!-- Label and input for team_id -->
      <div class="form-group">
        <label for="team_id" class="control-label">
          Team
        </label>

        <input type="text" id="team_id" name="team_id" placeholder="Team" class="form-control" value="<%= @result.team_id %>">
      </div>

      <!-- Label and input for description -->
      <div class="form-group">
        <label for="description" class="control-label">
          Description
        </label>

        <textarea id="description" name="description" placeholder="Description" class="form-control" rows="3"><%= @result.description %></textarea>
      </div>

      <button class="btn btn-warning">
        Update Result
      </button>
      or
      <a href="/results/<%= @result.id %>">Cancel</a>
    </form>
  </div>
</div>
