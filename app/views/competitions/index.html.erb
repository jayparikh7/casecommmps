<div class="page-header">
  <h1>
    Competitions
    <a href="/competitions/new" class="btn btn-lg btn-success">New Competition</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Sponsor</th>
        <th>Location</th>
        <th>Description</th>
        <th>Prize money</th>
        <th>Topic</th>
        <th>Deadline</th>
        <th>Teams</th>
        <th>Max teams</th>
        <th>Max</th>
        <th>Actions</th>
      </tr>

      <% @competitions.each do |competition| %>
      <tr>
        <td><%= competition.name %></td>
        <td><%= competition.sponsor %></td>
        <td><%= competition.location %></td>
        <td><%= competition.description %></td>
        <td><%= competition.prize_money %></td>
        <td><%= competition.topic %></td>
        <td><%= competition.deadline %></td>
        <td><%= competition.teams %></td>
        <td><%= competition.max_teams %></td>
        <td><%= competition.max %></td>
        <td>
          <a href="/competitions/<%= competition.id %>" class="btn btn-primary">Show</a>
          <a href="/competitions/<%= competition.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_competition/<%= competition.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
