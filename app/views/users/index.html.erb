<div class="page-header">
  <h2>
    All Users
  </h2>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Actions</th>
      </tr>

      <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td>
          <% if user.username == current_user.username  %>
          <a href="/users/edit" class="btn btn-primary">Edit</a>
          <% end  %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
