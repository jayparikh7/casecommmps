<div class="page-header">
  <h1>
    Teams
    <a href="/teams/new" class="btn btn-lg btn-success">New Team</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Creator</th>
        <th>Competitions</th>
        <th>Name</th>
        <th>Actions</th>
      </tr>

      <% @teams.each do |team| %>
      <tr>
        <td><%= team.creater.username %></td>
        <td><%= team.competition.name %></td>
        <td><%= team.name %></td>
        <td>
          <a href="/teams/<%= team.id %>" class="btn btn-primary">Show</a>
          <% if team.creater.username == current_user.username  %>
          <a href="/teams/<%= team.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_team/<%= team.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end  %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
