<div class="page-header">
  <h3>Team #<%= @team.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Creator</dt>
      <dd><%= @team.creater.username %></dd>

      <dt>Competitions</dt>
      <dd><%= @team.competition.name %></dd>

      <dt>Name</dt>
      <dd><%= @team.name %></dd>
    </dl>

    <div class="btn-group btn-group-justified">

      <a href="/invitations/new" class="btn btn-primary">
        Invite Team Members
      </a>
    </div>
    <br></br>

    <div class="btn-group btn-group-justified">
      <a href="/teams" class="btn btn-primary">
        Back
      </a>
      <% if @team.creater.username == current_user.username  %>
      <a href="/teams/<%= @team.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_team/<%= @team.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
      <% end  %>
    </div>
  </div>
</div>
